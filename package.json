{
  "name": "valis-client",
  "version": "0.1.0",
  "description": "Lightweight, browser-only WebSocket client for the Valis chain",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "dev-test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "ci": "npm run typecheck && npm run check:format && npm run build"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "eventemitter3": "^5"
  },
  "engines": {
    "node": ">=18"
  },
  "vitest": {
    "environment": "jsdom"
  }
}
